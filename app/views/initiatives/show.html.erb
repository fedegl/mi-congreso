<% title @initiative.title %>

<% if @initiative.subjects.present? %>
  <% @initiative.subjects.each do |subject| %>
    <div class="label label-large radius block"><%= subject.name %></div>
  <% end %>
<% end %>

<h2><%= @initiative.title %></h2>

<% if @initiative.member %>
<p>
  <div class="label secondary radius"><%= t("initiatives.proposed_by") %></div>
  <div class="proposer <%= party_abbr(@initiative.member) %>"><%= link_to @initiative.member.try(:name), @initiative.member %></div>
</p>
<% end %>

<h5><%= t('initiatives.description') %></h5>
<p><%= @initiative.description %></p>

<% if @initiative.original_document_url.present? %>
<p>
  <%= link_to t('initiatives.go_to_original_document'), @initiative.original_document_url, class: "small button" %>
</p>
<% end %>

<% if @initiative.summary_by.present? %>
<p>
  <span class="label secondary radius"><%= t("initiatives.summary_by") %></span>
  <span><%= @initiative.summary_by %></span>
</p>
<% end %>

<br/>

<%= render "disqus" %>