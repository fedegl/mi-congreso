<% classes "six push-three" %>

<h2><%= t("sessions.login") %></h2>

<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
  <%= f.input :email %>
  <%= f.input :password %>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me, class: "inline" %></div>
  <% end -%>

  <%= f.button :submit, t("sessions.go_in") %>
<% end %>

<%= render "users/shared/links" %>

